<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript">
    $(function () {
        var wait = $(".second").html();
        timeOut();

        function timeOut() {
            if (wait != 0) {
                setTimeout(function () {
                    $('.second').text(--wait);
                    timeOut();
                }, 1000);
            }
        }
    });
</script>



