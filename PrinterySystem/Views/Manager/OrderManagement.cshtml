@{
    Layout = "~/Views/Shared/_LayoutSys.cshtml";
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>商務控制後台</title>
    <link rel="stylesheet" href="~/Content/Dashboradasset/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Dashboradasset/css/all.css">
</head>
<body>

    <div class="container-fluid mt-3 main">
        <div class="row mb-3">
            <div class="col-md-3">
                <div class="input-group">
                    <input type="text" class="form-control form-control-sm" placeholder="search for..." data-toggle="tooltip" data-placement="top" data-html="true" title="<em>按下 Enter 快速搜尋</em>">
                    <div class="input-group-append">
                        <button class="btn btn-secondary">Go!</button>
                    </div>
                </div>
            </div>
            <div class="col-md-9 text-right my-2 my-lg-0">
                <button class="btn btn-primary" data-toggle="modal" data-target="#editModal" data-title="快速下單">
                    <fa class="fa fa-shopping-cart"></fa>
                    快速下單
                </button>
            </div>
        </div>

        <table class="table table-responsive-md table-hover">
            <thead>
                <tr>
                    <th width="10">#</th>
                    <th>品項</th>
                    <th width="120">Name</th>
                    <th width="200">Email</th>
                    <th width="120">狀態</th>
                    <th class="text-right" width="120">金額</th>
                    <th class="text-center" width="150">操作</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td><a href="#">超纖細肥皂 1盒</a></td>
                    <td>
                        Mark
                        <span class="badge badge-pill badge-danger">奧客</span>
                    </td>
                    <td>Mark@mail.com</td>
                    <td>已出貨</td>
                    <td class="text-right">NT$ 899</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group" aria-label="action">
                            <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#editModal" data-title="編輯 超纖細肥皂 1盒" data-backdrop="static">編輯</button>
                            <button type="button" class="btn btn-outline-secondary">查看</button>
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    ...
                                </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Other action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="#" data-toggle="modal" data-target="#removeModal" data-title="超纖細肥皂 1盒">刪除</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr class="table-danger">
                    <td>2</td>
                    <td><a href="#">(保證)無泡泡沐浴乳 5罐</a></td>
                    <td>
                        Jacob
                        <span class="badge badge-pill badge-success">常客</span>
                    </td>
                    <td>Jacob@mail.com</td>
                    <td><span class="text-danger">缺貨</span></td>
                    <td class="text-right">NT$ 3,600</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group" aria-label="action">
                            <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#editModal" data-title="編輯 (保證)無泡泡沐浴乳 5罐" data-backdrop="static">編輯</button>
                            <button type="button" class="btn btn-outline-secondary">查看</button>
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    ...
                                </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Other action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="#" data-toggle="modal" data-target="#removeModal" data-title="(保證)無泡泡沐浴乳 5罐">刪除</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td><a href="#">防滑燈罩 100個</a></td>
                    <td>Larry</td>
                    <td>Larry@mail.com</td>
                    <td>已出貨</td>
                    <td class="text-right">NT$ 14,060</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group" aria-label="action">
                            <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#editModal" data-title="編輯 防滑燈罩 100個" data-backdrop="static">編輯</button>
                            <button type="button" class="btn btn-outline-secondary">查看</button>
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    ...
                                </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Other action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="#" data-toggle="modal" data-target="#removeModal" data-title="防滑燈罩 100個">刪除</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row" colspan="7">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </th>
                </tr>
                <tr>
                    <th scope="row" colspan="7">...</th>
                </tr>
                <tr>
                    <th scope="row" colspan="7">...</th>
                </tr>
                <tr>
                    <th scope="row" colspan="7">...</th>
