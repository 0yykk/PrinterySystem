@{
    ViewBag.Title = "工单处理";
    Layout = "~/Views/Shared/_LayoutSysManager.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Content/Dashboradasset/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Dashboradasset/css/all.css">
</head>
<body>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">工单管理系统</h1>
        <p class="lead">点击按键进入相应管理页面</p>
    </div>

    <div class="container">
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">订单处理</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">管理已创建的订单</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>已创建：31312</li>
                        <li>已处理:123121</li>
                        <li>待处理：1321</li>
                        <li>订单复核</li>
                    </ul>
                    <a class="btn btn-lg btn-block btn-outline-primary" href="@Url.Action("OrderProcessing","Manager")">进入</a>
                </div>
            </div>
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">采购处理</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">管理采购提交订单</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>已创建：31312</li>
                        <li>已处理:123121</li>
                        <li>待处理：1321</li>
                        <li>订单复核</li>
                    </ul>
                    <a class="btn btn-lg btn-block btn-outline-primary" href="@Url.Action("PurchasingManagement","Manager")">进入</a>
                </div>
            </div>
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">生产处理</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">管理生产需求工单</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>已创建：31312</li>
                        <li>已处理:123121</li>
                        <li>待处理：1321</li>
                        <li>订单复核</li>
                    </ul>
                    <a class="btn btn-lg btn-block btn-outline-primary" href="@Url.Action("ProduceManagement","Manager")">进入</a>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
