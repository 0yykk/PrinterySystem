@{
    Layout = "~/Views/Shared/_LayoutSysManager.cshtml";
}
<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>个人中心</title>
    <link rel="stylesheet" href="~/Content/Dashboradasset/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Dashboradasset/css/all.css">
    <link rel="stylesheet" href="~/Content/UserInfoAsset/form-validation.css">
</head>
<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="~/Content/imges/icon/logo.jpg" alt="" width="72" height="72">
            <h2>个人信息</h2>
            <p class="lead">用户个人信息</p>
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Today</span>
                    <span class="badge badge-secondary badge-pill">今日提醒</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">今日新增订单</h6>
                            <small class="text-muted">New</small>
                        </div>
                        <span class="text-muted">23231</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">待处理订单</h6>
                            <small class="text-muted">Wait</small>
                        </div>
                        <span class="text-muted">1231</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">已处理订单</h6>
                            <small class="text-muted">Done</small>
                        </div>
                        <span class="text-muted">1231</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">您已处理订单</h6>
                            <small class="text-muted">You have done</small>
                        </div>
                        <span class="text-success">123</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>$20</strong>
                    </li>
                </ul>

                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="雇员ID">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-secondary">搜索</button>
                        </div>
                    </div>
                </form>
            </div>
            @{
                var emp = ViewBag.Employee as Printery.Domain.ViewModel.EmployeeViewModel;
                if (emp!=null)
                {               
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">个人中心</h4>
                    <form class="needs-validation" novalidate="">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">姓名:</label>
                                <label>@emp.Ename</label>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">性别:</label>
                                <label>@emp.Sex</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="username">民族:</label>
                            <label>@emp.Nation</label>
                        </div>

                        <div class="mb-3">
                            <label for="email">QQ :</label>
                            <label>@emp.QQ</label>
                        </div>

                        <div class="mb-3">
                            <label for="address">部门:</label>
                            <label>@emp.Department</label>
                        </div>
                        <div class="mb-3">
                            <label for="address">电话:</label>
                            <label>@emp.Phone</label>
                        </div>

                        <div class="mb-3">
                            <label for="address2">用户组: </label>
                            <label>@emp.UserGroup</label>
                        </div>

                        <div class="row">
                            <div class="col-md-5 mb-3">
                            </div>
                            <div class="col-md-4 mb-3">
                            </div>
                            <div class="col-md-3 mb-3">
                            </div>
                        </div>
                        <hr class="mb-4">

                        <hr class="mb-4">
                        <a class="btn btn-primary btn-lg btn-block" href="@Url.Action("MyInfoEdit", "Person4Manager",new { id = emp.EmpId, type = "Edit" })">编辑个人信息</a>
                    </form>
                </div>
                }
            }
        </div>
    </div>

</body>
</html>