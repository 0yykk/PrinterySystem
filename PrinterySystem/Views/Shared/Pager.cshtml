<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (_pager.PageIndex == 0)
        {

            <li class="page-item"><a href="###" class="page-link">&laquo;</a></li>
        }
        else
        {
            routeValues["page"] = _pager.PageIndex - 1;

            <li class="page-item">
                @Html.ActionLink("«", _action, routeValues,new { @class="page-link"})
            </li>
        }
        @foreach (int p in _pager.Pages)
        {
            if (p < 0)
            {
                <li class="page-item"><a>- - -</a></li>
            }
            else if (p == _pager.PageIndex)
            {
                <li class="page-item active">
                    <a href="#" class="page-link">@p</a>
                </li>
            }
            else
            {
                routeValues["page"] = p;
                <li>@Html.ActionLink(p.ToString(), _action, routeValues,new { @class="page-link"})</li>
            }
        }
        @if (_pager.PageIndex == _pager.PageCount)
        {
            <li class="page-item"><a href="###" class="page-link">&raquo;</a></li>
        }
        else
        {
            routeValues["page"] = _pager.PageIndex + 1;
            <li class="page-item">
                @Html.ActionLink("»", _action, routeValues,new { @class="page-link"})
            </li>
        }
    </ul>
</nav>
